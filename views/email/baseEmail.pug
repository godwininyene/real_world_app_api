doctype html
html
  head
    meta(name='viewport', content='width=device-width')
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    title= subject
    include _style
  body
    table.body(role='presentation', border='0', cellpadding='0', cellspacing='0', style='width: 100%;')
      tbody
        tr
          td
          td.container
            .content
              // START CENTERED WHITE CONTAINER
              table.main(role='presentation', style='width: 100%; background-color: #ffffff;')
                tbody
                  // START HEADER
                  tr
                    td.wrapper
                      table(role='presentation', border='0', cellpadding='0', cellspacing='0', style='width: 100%;')
                        tbody
                          tr
                            td
                              // Global header with logo and title
                              .header(style="text-align: center; padding: 20px 0;")
                                img(src="https://api.jointherealworldd2.com/img/logo.png" alt="JoinTheRealWorld Logo" style="height: 56px; width: auto; display: block; margin: 0 auto;")
                                h2(style="color: #1f156e; font-weight: bold; font-size: 16px; margin: 8px 0 0;") Join The Real World

                  // START MAIN AREA
                  tr
                    td.wrapper
                      table(role='presentation', border='0', cellpadding='0', cellspacing='0', style='width: 100%;')
                        tbody
                          tr
                            td.email_content
                              // CONTENT
                              block content

              // START FOOTER
              .footer
                table(role='presentation', border='0', cellpadding='0', cellspacing='0', style='width: 100%;')
                  tbody
                    tr
                      td.content-block(style="text-align: center; padding: 20px; color: #999; font-size: 12px;")
                        span.apple-link JoinTheRealWorld. 456 Fintech Plaza, Suite 1200, San Francisco, CA 94103, USA.
                        br
                        | Don't like these emails? 
                        a(href='#' style="color: #1f156e; text-decoration: none;") Unsubscribe
          td